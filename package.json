{
  "name": "moochzo",
  "version": "1.0.0",
  "description": "Tired of your mates mooching you energy - Moochzo to the rescue. Moochzo allows you to detect the arrival of your friends using their BLE device and then bill them (un) equally using Monzo pots for the energy costs whilst they are guests in your home.  ",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbit/moochzo.git"
  },
  "keywords": [
    "Monzo",
    "IOT",
    "node.js"
  ],
  "author": "Andrew Garbett",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbit/moochzo/issues"
  },
  "homepage": "https://github.com/garbit/moochzo#readme",
  "dependencies": {
    "mqtt": "^2.18.3"
  },
  "devDependencies": {
    "eslint": "^5.3.0",
    "nodemon": "^1.18.3"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ]
    }
  }
}
